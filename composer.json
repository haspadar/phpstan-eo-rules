{
  "name": "haspadar/phpstan-eo-rules",
  "description": "PHPStan rules enforcing Elegant Objects principles (no static, no null, immutability, composition)",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "phpstan/phpstan": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "friendsofphp/php-cs-fixer": "^3.90"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Haspadar\\PHPStanEoRules\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Haspadar\\PHPStanEoRules\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --order-by=random",
    "phpstan": "phpstan analyse",
    "cs-fix": "php-cs-fixer fix --verbose",
    "cs-check": "php-cs-fixer fix --dry-run --diff --verbose",
    "reuse-lint": "reuse lint",
    "reuse-annotate": "reuse annotate --copyright='Konstantinas Mesnikas' --license='MIT'",
    "danger-pr": "npx danger pr",
    "lint:docker": "hadolint --config .hadolint.yaml Dockerfile"
  },
  "config": {
    "platform-check": false
  }
}
