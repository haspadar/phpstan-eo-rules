{
  "name": "haspadar/phpstan-eo-rules",
  "description": "PHPStan rules enforcing Elegant Objects principles (no static, no null, immutability, composition)",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "phpstan/phpstan": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Haspadar\\PHPStanEoRules\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Haspadar\\PHPStanEoRules\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --order-by=random"
  },
  "config": {
    "platform-check": false,
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
